datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model OrderItem {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  price     Float?
  quantity  Int?
  updatedAt DateTime @updatedAt
}

model Order {
  createdAt   DateTime  @default(now())
  date        DateTime?
  id          String    @id @default(cuid())
  orderNumber String?
  totalAmount Float?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
